@using EventModels
@model List<Meet>

@{
    ViewData["Title"] = "My Meetings";
}

<div class="container">
    <h1 class="title">My Scheduled Meetings</h1>

    @if (Model != null && Model.Any())
    {
        <table class="meeting-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Hall</th>
                    <th>Reason</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>@Model[i].DateMeet</td>
                        <td>@Model[i].Hour</td>
                        <td>@ViewBag.HallName[i]</td> <!-- פה אנחנו מציגים את שם האולם -->
                        <td>@Model[i].ReasonMeet</td>
                        <td>
                            <a href="/Catalog/DeleteMeet/@Model[i].Id" class="btn delete-btn" onclick="return confirm('Are you sure you want to delete this meeting?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="no-meetings">No meetings scheduled.</p>
    }
</div>
<a href="http://localhost:5043" class="back-button">Back</a>
<style>
    body {
        font-family: Arial, sans-serif;
        background: radial-gradient(at center, #3b3b3b, #1f1f1f);
        color: #d0c784;
        text-align: center;
        padding: 20px;
    }

    .container {
        width: 85%;
        margin: auto;
        background: linear-gradient(135deg, #2a2a2a, #1f1f1f);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.7);
        border: 2px solid #d0c784;
    }

    .title {
        font-size: 2.2rem;
        margin-bottom: 15px;
        color: #d0c784;
    }

    .meeting-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        background: #222;
        color: #d0c784;
        border-radius: 10px;
        overflow: hidden;
    }

        .meeting-table th, .meeting-table td {
            border: 1px solid #444;
            padding: 12px;
            text-align: center;
        }

        .meeting-table th {
            background: #333;
            font-size: 1.2rem;
            text-transform: uppercase;
        }

        .meeting-table tr:nth-child(even) {
            background: rgba(255, 255, 255, 0.05);
        }

    .btn {
        padding: 8px 12px;
        margin: 4px;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        display: inline-block;
        transition: transform 0.2s, box-shadow 0.3s;
    }

    .edit-btn {
        background: linear-gradient(135deg, #5a9, #3e7);
        color: white;
    }

    .delete-btn {
        background: linear-gradient(135deg, #d55, #a33);
        color: white;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 10px rgba(208, 199, 132, 0.6);
    }

    .no-meetings {
        font-size: 1.2rem;
        color: #d0c784;
        margin-top: 15px;
    }

    .back-button {
        position: absolute;
        top: 20px;
        left: 20px;
        background: linear-gradient(135deg, #9c6e33, #d0c784);
        color: #1f1f1f;
        padding: 10px 20px;
        text-decoration: none;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 5px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        transition: transform 0.2s, box-shadow 0.3s;
    }

        .back-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(208, 199, 132, 0.8);
        }
</style>

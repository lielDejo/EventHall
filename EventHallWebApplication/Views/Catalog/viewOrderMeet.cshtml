@{
    ViewData["Title"] = "Schedule Meeting";
}

<div class="form-container">
    <h1 class="form-title">Schedule Your Meeting</h1>

    <form method="post" action="/Catalog/yourMeets">
        <input name="HallId" type="hidden" value="@ViewBag.HallId" />

        <div class="form-group">
            <label for="DateMeet">Select Date</label>
            <div class="input-container">
                <input type="date" id="DateMeet" name="DateMeet" required>
                <span class="icon">📅</span>
            </div>
        </div>
        
        <div class="form-group">
            <label for="Hour">Select Time</label>
            <div class="input-container">
                <input type="time" id="Hour" name="Hour" required>
                <span class="icon">⏰</span>
            </div>
        </div>

        <div class="form-group">
            <label for="ReasonMeet">Reason for the Meeting</label>
            <textarea id="ReasonMeet" name="ReasonMeet" required></textarea>
        </div>

        <button type="submit" class="form-button">Book Meeting</button>
        @if (ViewBag.Error != null)
        {
            <div class="error-message">@ViewBag.Error</div>
        }

    </form>
</div>
<a href="http://localhost:5043" class="back-button">Back</a>
<script>
    document.getElementById('DateMeet').addEventListener('change', function (e) {
        const selectedDate = new Date(e.target.value);
        const dayOfWeek = selectedDate.getDay();

        if (dayOfWeek === 5 || dayOfWeek === 6) { // 5 = Friday, 6 = Saturday
            alert('Fridays and Saturdays are unavailable for booking.');
            e.target.value = '';
        }
    });
</script>


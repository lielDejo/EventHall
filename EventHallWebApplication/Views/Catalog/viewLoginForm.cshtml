@{
    ViewData["Title"] = "viewLoginForm";
}

<div class="form-container">
    <h1 class="form-title">Log In</h1>
    <form method="post" action="http://localhost:5043/Catalog/Login">
        <div class="form-group">
            <label for="userName">Name</label>
            <div class="input-container">
                <input type="text" id="name" name="userName" placeholder="Enter your name" required>
                <span class="icon">&#x1F464;</span> <!-- אייקון התחברות -->
            </div>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <div class="input-container">
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
                <span class="icon">&#128272;</span> <!-- אייקון של מנעול -->
            </div>
        </div>

        <button type="submit" class="form-button">Submit</button>
        <button type="submit" class="admin-button" formaction="http://localhost:5043/Catalog/AdminLogin">Log in as Admin</button>
        
        @if (ViewBag.error != null)
        {
            <h1 class="error-message"></h1>
            <h1 class="error-message">There is something wrong, please try again</h1>
        }
    </form>
</div>

<a href="http://localhost:5043" class="back-button">Back</a>


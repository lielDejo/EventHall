@using EventModels
@model EventHall

@{
    ViewData["Title"] = "Event Hall Details";
}

<main class="main">
    <h1 class="golden-title">@Model.HallName</h1>

    @if (ViewBag.userId != null)
    {
        <a href="http://localhost:5043/Catalog/viewOrderMeet?HallId=@Model.Id" class="reservation-icon">
            <span class="icon">&#x1F4C5;</span>
        </a>
    }

    <div class="hall-details">
        <div class="image-gallery">
            <div class="carousel">
                @foreach (Image_ image in Model.HallImage)
                {
                    <div class="carousel-item">
                        <img src="@image.ImageAddress" class="gallery-img" alt="@Model.HallName" />
                    </div>
                }
                <button class="prev">&#10094;</button>
                <button class="next">&#10095;</button>
            </div>
        </div>

        <div class="hall-info">
            <div class="hall-specs">
                <ul>
                    <li><strong>Location:</strong> @Model.GeographicalLocation</li>
                    <li><strong>Rating:</strong> @Model.Rating ★</li>
                    <li><strong>About us:</strong> @Model.DescriptionHall</li>
                </ul>
            </div>

            @if (ViewBag.userId != null)
            {
                <form method="post" action="@Url.Action("SubmitRating", "Catalog")">
                    <div>
                        <label for="rating">Rate this hall:</label>
                        <select name="rating" id="rating">
                            <option value="1">1 Star</option>
                            <option value="2">2 Stars</option>
                            <option value="3">3 Stars</option>
                            <option value="4">4 Stars</option>
                            <option value="5">5 Stars</option>
                        </select>
                    </div>
                    <input type="hidden" name="hallId" value="@Model.Id" />
                    <button type="submit">Submit Rating</button>
                </form>
            }
        </div>
    </div>
</main>

<footer>
    <p>&copy; 2025 Hall Event. Liel Dejo.</p>
    <p>
        Follow us on:
        <a href="#">Facebook</a> |
        <a href="#">Instagram</a> |
        <a href="#">Twitter</a>
    </p>
</footer>

<style>
    body {
        font-family: 'Playfair Display', serif;
        background: linear-gradient(to right, #1a1a1a, #292929);
        color: #e6c07b;
        text-align: center;
        margin: 0;
        padding: 0;
    }

    .main {
        max-width: 1200px;
        margin: 50px auto;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        position: relative;
    }

    .golden-title {
        font-size: 60px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 5px;
        color: #e6c07b;
        text-shadow: 0 3px 7px rgba(212, 175, 55, 0.6);
        margin-bottom: 10px;
    }

    .hall-details {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: flex-start;
        position: relative;
    }

    .reservation-icon {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 50px;
        color: #d4af37;
        text-decoration: none;
        transition: transform 0.3s;
    }

        .reservation-icon:hover {
            transform: scale(1.2);
        }

    .carousel {
        display: flex;
        overflow: hidden;
        position: relative;
        padding: 35px;
    }

    .carousel-item {
        flex: 1;
        display: none;
        transition: transform 0.3s ease-in-out;
    }

        .carousel-item.active {
            display: block;
        }

    .gallery-img {
        width: 100%;
        height: 400px;
        object-fit: cover;
    }

    .prev, .next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        font-size: 30px;
        color: #d4af37;
        background-color: transparent;
        border: none;
        cursor: pointer;
        z-index: 10;
    }

    .prev {
        left: 10px;
    }

    .next {
        right: 10px;
    }

    .hall-info {
        flex: 1;
        text-align: left;
        padding: 10px;
    }

    .hall-specs ul {
        list-style: none;
        padding: 0;
    }

    .hall-specs li {
        font-size: 20px;
        padding: 10px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    footer {
        background: #111;
        padding: 20px;
        color: #d4af37;
        text-align: center;
    }

    .rating-section {
        margin-top: 30px;
        font-size: 22px;
        color: #e6c07b;
        text-align: center;
    }

    .star-rating {
        direction: ltr;
        display: inline-block;
        cursor: pointer;
        font-size: 35px;
        margin-top: 10px;
    }

        .star-rating .star {
            transition: color 0.2s ease-in-out;
        }

            .star-rating .star:hover,
            .star-rating .star.hovered,
            .star-rating .star.selected {
                color: gold;
            }
</style>

<script>
    let currentIndex = 0;
    const items = document.querySelectorAll('.carousel-item');
    const totalItems = items.length;

    function showSlide(index) {
        items.forEach(item => item.classList.remove('active'));
        items[index].classList.add('active');
    }

    document.querySelector('.prev').addEventListener('click', () => {
        currentIndex = (currentIndex === 0) ? totalItems - 1 : currentIndex - 1;
        showSlide(currentIndex);
    });

    document.querySelector('.next').addEventListener('click', () => {
        currentIndex = (currentIndex === totalItems - 1) ? 0 : currentIndex + 1;
        showSlide(currentIndex);
    });

    showSlide(currentIndex);

</script>

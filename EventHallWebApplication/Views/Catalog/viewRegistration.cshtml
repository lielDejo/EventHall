@{
    ViewData["Title"] = "viewRegisteration";
}

<a href="http://localhost:5043" class="back-button">Back</a>

<div class="form-container">
    <h1 class="form-title">Register</h1>
    <form method="post" action="http://localhost:5043/Catalog/Registration">
        <div class="form-group">
            <label for="userName">Name</label>
            <div class="input-container">
                <input type="text" id="name" name="userName" placeholder="Enter your name" required>
                <span class="icon">&#x1F464;</span>
            </div>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <div class="input-container">
                <input type="email" id="email" name="email" placeholder="Enter your email" required>
                <span class="icon">📧</span>
            </div>
        </div>

        <div class="form-group">
            <label for="phoneNumber">Phone Number</label>
            <div class="input-container">
                <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Enter your phone number" required>
                <span class="icon">📞</span>
            </div>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <div class="input-container">
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
                <span class="icon">&#128272;</span>
            </div>
        </div>

        <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <div class="input-container">
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
                <span class="icon">&#128272;</span>
            </div>
        </div>

        <button type="submit" class="form-button">Submit</button>
        @if (ViewBag.error != null)
        {
            <h1 class="error-message">There is something wrong, please try again</h1>

        }


        <div class="form-group">
            <button type="submit" class="admin-button" formaction="http://localhost:5043/Catalog/AdminRegistration">
                Register as Admin
            </button>
        </div>

    </form>
</div>


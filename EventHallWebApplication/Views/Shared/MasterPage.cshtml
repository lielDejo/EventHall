        }


    /* Golden Title */
    .golden-title {
        font-size: 50px;
        font-weight: bold;
        background: linear-gradient(45deg, #9c6e33, #d0c784); /* זהב דקורטיבי */
        background-clip: text;
        color: transparent; /* הופך את צבע הטקסט לשקוף כדי שהגרדיאנט ייראה */
        text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.5);
        text-transform: uppercase;
        letter-spacing: 5px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    /* Footer Section */
    footer {
        background-color: #2a2a2a;
        padding: 20px;
        color: #fff;
        text-align: center;
    }

        footer a {
            color: #d0c784; /* צבע זהב */
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline;
            }
    /* Auth Menu */
    .Register-menu {
        padding: 0px 90px;
    }

    .auth-menu {
        background: linear-gradient(45deg, #9c6e33, #d0c784);
        background-clip: text;
        outline: 3px solid #9c6e33;
        border-radius: 10px;
    }


</style>
